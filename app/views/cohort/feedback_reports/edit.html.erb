<%= render "cohorts/tabs" %>

<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h1 class="h5 mb-0">Edit Feedback Report</h1>
    <div>
      <%= link_to cohort_feedback_report_path(@cohort, @feedback_report), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fa-solid fa-arrow-left me-1"></i> Back to Report
      <% end %>
    </div>
  </div>
  <div class="card-body">
    <%= form_with(model: [@cohort, @feedback_report], local: true) do |form| %>
      <% if @feedback_report.errors.any? %>
        <div class="alert alert-danger">
          <h4 class="alert-heading"><%= pluralize(@feedback_report.errors.count, "error") %> prohibited this feedback report from being saved:</h4>
          <ul>
            <% @feedback_report.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :message, "Report Content", class: "form-label" %>
        <%= form.text_area :message, class: "form-control", rows: 15 %>
      </div>

      <div class="text-end">
        <%= form.submit "Update Report", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div> 
