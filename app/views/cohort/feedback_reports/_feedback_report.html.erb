<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h1 class="h5 mb-0">Feedback Report</h1>
      <div class="d-flex gap-2">
        <% unless @feedback_report.sent? %>
          <%= button_to "Delete", cohort_feedback_report_path(@cohort, @feedback_report),
            method: :delete,
            class: "btn btn-sm btn-outline-danger",
            form: { data: { turbo_confirm: "Are you sure you want to delete this feedback report?" } } %>
          <%= link_to edit_cohort_feedback_report_path(@cohort, @feedback_report), class: "btn btn-sm btn-outline-primary me-2" do %>
            <i class="fa-solid fa-pen me-1"></i> Edit
          <% end %>
        <% end %>
        <%= link_to cohort_feedback_reports_path(@cohort), class: "btn btn-sm btn-outline-secondary" do %>
          <i class="fa-solid fa-arrow-left me-1"></i> Back to Reports
        <% end %>
      </div>
    </div>
    <div class="card-body">
      <div class="row mb-3">
        <div class="col-md-6">
          <p><strong>Period:</strong> <%= @feedback_report.start_date.strftime("%B %d, %Y") %> - <%= @feedback_report.end_date.strftime("%B %d, %Y") %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Created:</strong> <%= @feedback_report.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        </div>
      </div>
      
      <div class="mb-3">
        <h2 class="h6">Report Contents</h2>
        <div class="card">
          <div class="card-body">
            <pre class="mb-0"><%= @feedback_report.message %></pre>
          </div>
        </div>
      </div>
      
      <% if @feedback_report.sent? %>
        <div class="alert alert-success">
          <i class="fa-solid fa-check-circle me-2"></i> This report was sent via Discord on <%= @feedback_report.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
        </div>
      <% elsif @feedback_report.error_message.present? %>
        <div class="alert alert-danger">
          <i class="fa-solid fa-exclamation-circle me-2"></i> Failed to send this report: <%= @feedback_report.error_message %>
        </div>
      <% else %>
        <div class="alert alert-info">
          <i class="fa-solid fa-info-circle me-2"></i> This report has not been sent yet.
        </div>
      <% end %>
    </div>
  </div>
</div>
