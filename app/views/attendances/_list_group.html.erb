<div class="list-group list-group-flush">
  <% attendances.each do |attendance| %>
    <%= link_to cohort_attendance_path(cohort, attendance), class: "list-group-item" do %>
      <div class="d-flex">
        <div class="me-auto d-flex align-items-baseline">
          <span class="badge bg-secondary font-monospace me-2">
            <%= Attendance.categories.fetch(attendance.category, "unknown").titleize %>
          </span>
          <div>
            <div>
              <%= attendance.title %>
              <span class="text-secondary ms-1">
                <%= attendance.occurred_at.strftime("%A, %B %e") %>
              </span>
            </div>
          </div>
        </div>
        <div>
          <span class="badge bg-dpi-primary ms-2">
            Attended: <%= attendance.attendees_count %>
          </span>
          <i class="fa-solid fa-chevron-right fa-fw"></i>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
